<div>
  <%=form_tag(search_path, method: "get", id: "search-form") do %>
    <%= text_field_tag :search, nil, placeholder: "Search Baked Noms" %>
    <%= submit_tag "Search", name: nil %> 
  <% end %>

  <% if @places.blank? %>
    <h4>There are no Baked Noms that fit that description <span> <%=params[:search] %>.</span>
    </h4>
  <% end %>
</div>

